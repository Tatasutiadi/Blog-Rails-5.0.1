<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="#">Home</a></li>
  <li class="breadcrumb-item active">Log In</li>
</ol>
<div class="no-border">
  <div class="page-header"><h1>Login</h1></div>
</div>
<p>Please fill out the following fields to login</p>
<div class="row mt20">
  <div class="col-md-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :email,class:'col-sm-2 col-form-label'%><br />
          <div class="col-sm-8">
            <%= f.email_field :email, autofocus: true,:class=>'form-control',placeholder: "" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password,class:'col-sm-2 col-form-label'%><br />
          <div class="col-sm-8">
            <%= f.password_field :password, autocomplete: 'off',:class=>'form-control',placeholder: "" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <div class="col-sm-8">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
        <% end -%>

        <div class="form-group form-actions">
          <div class="col-sm-8">
            <%= f.submit "Log in" ,class:"btn btn-primary" %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>
          </div>
        </div>
    <% end %>
  </div>
  <div class="col-md-1">
    <div style="border-left:0.3px solid rgba(0,0,0,0.49);height:200px"></div>
  </div>
  <div class="col-md-5">
    <%= link_to "<i class='fa fa-facebook-official'></i> Sign In using Facebook".html_safe, account_facebook_omniauth_authorize_path ,class:'btn btn-outline-primary btn-block'%>
    <%= link_to "<i class='fa fa-google'></i> Sign In using Google".html_safe, account_google_oauth2_omniauth_authorize_path ,class:'btn btn-outline-danger btn-block'%>
    <%= link_to "<i class='fa fa-twitter-square'></i> Sign In using Twitter Account".html_safe, account_twitter_omniauth_authorize_path ,class:'btn btn-outline-info btn-block'%>
  </div>
</div>

<%#= render "devise/shared/links" %>